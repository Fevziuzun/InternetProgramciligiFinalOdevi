@model SchoolProject.Models.StudentModels
@{

    ViewBag.Title = "${Model.AdSoyad}";
}

<main>
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Öğrenci Güncelle</h1>
                <p style="color:red;font-size:20px">@TempData["Status"]</p>
                <p>
                    @using (Html.BeginForm("UpdateStudent", "Student", FormMethod.Post))
                    {
                        @Html.Hidden("Id", Model.Student.Id);

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.LabelFor(model => model.Student.AdSoyad, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Student.AdSoyad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Student.AdSoyad, "", new { @class = "text-danger" })
                        <br />
                        @Html.LabelFor(model => model.Student.OgrenciNo, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Student.OgrenciNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Student.OgrenciNo, "", new { @class = "text-danger" })
                        <br />
                        @Html.LabelFor(model => model.Student.Bolum, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Student.Bolum, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Student.Bolum, "", new { @class = "text-danger" })
                        <br />
                        @Html.Label("Öğrenci Doğum Tarihi:", new { @class = "form-label" })
                        <input type="date" name="DTarih" class="form-control" value="@Model.Student.DTarih.Value.ToString("yyyy-MM-dd")" />
                        <br />
                        <button type="submit" class="btn btn-success">  Kaydet </button>
                    }
                </p>
            </div>
        </div>
    </section>

</main>


@model SchoolProject.Models.LessonModels
@{
    ViewBag.Title = "Update Lesson";
}

<main>
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Personel Güncelle</h1>
                <p style="color:red;font-size:20px">@TempData["Status"]</p>
                <p>
                    @using (Html.BeginForm("UpdateLesson", "Lesson", FormMethod.Post))
                    {
                        @Html.Hidden("Id", Model.Lesson.Id);

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.LabelFor(model => model.Lesson.Ad, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Lesson.Ad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Lesson.Ad, "", new { @class = "text-danger" })
                        <br />
                        @Html.LabelFor(model => model.Lesson.Kredisi, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Lesson.Kredisi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Lesson.Kredisi, "", new { @class = "text-danger" })
                        <br />
                        @Html.LabelFor(model => model.Lesson.OkulYonetimId, htmlAttributes: new { @class = "control-label col-md-2" })

                        <select name="OkulYonetimId" class="form-select">
                            @foreach (var item in Model.Teachers)
                            {
                                <option value="@item.Id"> @item.AdSoyad </option>
                            }


                        </select>

                        <br />

                        <button type="submit" class="btn btn-success">  Kaydet </button>
                    }
                </p>
            </div>
        </div>
    </section>

</main>
